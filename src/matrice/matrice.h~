#ifndef __MATRICE_H__
#define __MATRICE_H__

struct matrice{
  int* mat;
  int largeur;
  int hauteur;
  int tailleMat;
};

typedef struct matrice * Matrice;

Matrice initMatrice(int, int);

int getLargeurMatrice(Matrice);
int getHauteurMatrice(Matrice);
int getTailleMatrice(Matrice);
int getCell(int, int, Matrice);
int setCell(int, int, Matrice, int);

void showMatrice(Matrice);

void deleteMatrice(Matrice);

#endif
